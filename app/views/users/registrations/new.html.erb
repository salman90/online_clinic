<section id='login'>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-wrap">
          <h1><%= "تسجيل الدخول" %></h1>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: true %>
            </div>
            <div class="form-group">
              <%= f.text_field :middle_name, autofocus: true, class: 'form-control', placeholder: true %>
            </div>
            <div class="form-group">
              <%= f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: true %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder: true, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", placeholder: true, class: 'form-control'  %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: true,
              class: 'form-control' %>
            </div>


            <div class="form-group button-div">
              <%= f.submit "تسجيل الدخول",  class: 'btn btn-custom btn-lg btn-block' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
